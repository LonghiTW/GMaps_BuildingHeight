{
	"manifest_version": 3,
	"name": "StreetView AddOn",
	"version": "2.0",
	"description": "A Google StreetView AddOn with height and coordinates estimation.",
	"permissions": ["activeTab", "scripting", "storage"],
	"host_permissions": ["*://*.google.com/*"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "streetview.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["down.svg"],
			"matches": ["https://*/*"]
		}
	],
	"icons": {
		"16": "streetview.png",
		"48": "streetview.png",
		"128": "streetview.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.google.com/maps/*"],
			"css": ["styles.css"],
			"js": ["content.js"]
		}
	]
}
